<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/dialog_query_setting_tile"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/length_45"
        android:background="@color/app_back" >

        <TextView
            android:id="@+id/DialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="选择核对单"
            android:textColor="@color/TitleColorMax"
            android:textSize="20.0sp" />

        <Button
            android:id="@+id/dialog_query_setting_close"
            android:layout_width="@dimen/length_45"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="关闭"
            android:textColor="@color/TitleColorMax" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@drawable/shape_line" />

    <ListView
        android:id="@+id/dialog_query_setting_list"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/length_300"
        android:divider="@color/app_back"
        android:dividerHeight="@dimen/length_1"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:smoothScrollbar="true" >
    </ListView>

</LinearLayout>