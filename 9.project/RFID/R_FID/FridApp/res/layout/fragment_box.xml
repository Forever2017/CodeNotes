<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <com.frid.view.NormalTitleBar
        android:id="@+id/BoxTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:left_visible="false"
        app:title="@string/tab_title_03" />

    <ImageView
        android:id="@+id/BoxBoxButton"
        android:layout_width="@dimen/length_160"
        android:layout_height="@dimen/length_160"
        android:layout_below="@id/BoxTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/length_30"
        android:src="@drawable/box_img" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/BoxBoxButton"
        android:gravity="center"
        android:text="保 险 箱"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size_18" />

    <ImageView
        android:id="@+id/BoxTransferButton"
        android:layout_width="@dimen/length_160"
        android:layout_height="@dimen/length_160"
        android:layout_below="@id/BoxBoxButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/length_50"
        android:src="@drawable/transfer_img" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/BoxTransferButton"
        android:gravity="center"
        android:text="待 接 收"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size_18" />

    <Button android:id="@+id/BoxSynchronization"
        android:layout_width="@dimen/length_120"
        android:layout_height="@dimen/length_45"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/length_20"
        android:background="@drawable/button_style"
        android:text="@string/Synchronization"
        android:textColor="@android:color/white" />

</RelativeLayout>