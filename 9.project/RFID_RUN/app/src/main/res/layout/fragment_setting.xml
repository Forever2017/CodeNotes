<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/length_20"
        android:layout_marginLeft="@dimen/length_20"
        android:layout_marginRight="@dimen/length_20"
        android:layout_marginTop="@dimen/length_20"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/QueryTableHead"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/length_40"
            android:weightSum="5">

            <TextView
                android:layout_width="@dimen/length_50"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="商品名"
                android:textColor="@color/blue"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:layout_width="@dimen/length_50"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="商品名"
                android:textColor="@color/blue"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:layout_width="@dimen/length_50"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="待检数"
                android:textColor="@color/blue"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:layout_width="@dimen/length_50"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="实检数"
                android:textColor="@color/blue"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:layout_width="@dimen/length_50"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="实检数"
                android:textColor="@color/blue"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@drawable/shape_line" />
    </LinearLayout>


</LinearLayout>