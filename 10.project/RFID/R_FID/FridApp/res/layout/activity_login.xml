<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/TitleColor"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dip"
        android:layout_marginLeft="60dip"
        android:layout_marginRight="60dip"
        android:layout_marginTop="80dip"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_launcher" />

    <EditText
        android:id="@+id/UserName"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/length_45"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@android:color/white"
        android:drawablePadding="10dip"
        android:drawableStart="@drawable/username"
        android:hint="@string/inputUserName"
        android:maxLength="15"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:textSize="@dimen/font_size_16" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/shape_line" />

    <EditText
        android:id="@+id/PassWord"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/length_45"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@android:color/white"
        android:drawablePadding="10dip"
        android:drawableStart="@drawable/password"
        android:hint="@string/inputPassWord"
        android:inputType="textPassword"
        android:maxLength="15"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:textSize="@dimen/font_size_16" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/length_30"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/LoainSavePass"
            android:text="@string/SavePass"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_16" />

        <CheckBox
            android:id="@+id/LoainSavePass"
            android:layout_width="@dimen/length_30"
            android:layout_height="@dimen/length_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dip"
            android:background="@drawable/check_box_style"
            android:button="@null"
            android:checked="true"
            android:textColor="#000000" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/length_30"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/AILogin"
            android:text="@string/AILogin"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_16" />

        <CheckBox
            android:id="@+id/AILogin"
            android:layout_width="@dimen/length_30"
            android:layout_height="@dimen/length_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dip"
            android:background="@drawable/check_box_style"
            android:button="@null"
            android:checked="true"
            android:textColor="#000000" />
    </RelativeLayout>

    <Button
        android:id="@+id/LoginRunBut"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/length_45"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/button_style"
        android:text="@string/login"
        android:textColor="@android:color/white" />

</LinearLayout>