<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_back"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/length_45"
        android:background="@color/entryBlue" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="频率选择"
            android:textColor="@color/TitleColorMax"
            android:textSize="20.0sp" />

        <Button
            android:id="@+id/dialog_power_close"
            android:layout_width="@dimen/length_45"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="关闭"
            android:textColor="@color/TitleColorMax" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@drawable/shape_line" />

    <SeekBar
        android:id="@+id/dialog_power_seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="@dimen/length_20"
        android:max="25" />

    <TextView
        android:id="@+id/dialog_power_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="@dimen/length_10"
        android:text="当前频率："
        android:textColor="@color/TitleColorMax"
        android:textSize="16.0sp" />

    <Button
        android:id="@+id/dialog_power_but"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/length_45"
        android:layout_marginBottom="@dimen/length_20"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="@dimen/length_20"
        android:background="@drawable/button_style"
        android:text="确认"
        android:textColor="@android:color/white" />

</LinearLayout>